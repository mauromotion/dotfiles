theme = poimandres
background-opacity = 0.95
window-decoration = false
gtk-titlebar = false
gtk-adwaita = false
window-padding-x = 2
window-padding-balance = true
window-theme = ghostty
font-size = 12

keybind = ctrl+shift+enter=new_split:down
keybind = ctrl+shift+alt+enter=new_split:right

keybind = ctrl+shift+up=resize_split:up,20
keybind = ctrl+shift+down=resize_split:down,20
keybind = ctrl+shift+left=resize_split:left,20
keybind = ctrl+shift+right=resize_split:right,20

keybind = ctrl+shift+left_bracket=goto_split:previous
keybind = ctrl+shift+right_bracket=goto_split:next

keybind = ctrl+shift+z=toggle_split_zoom
